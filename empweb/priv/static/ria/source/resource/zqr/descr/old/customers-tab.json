{
    "type" : "table",

    "warns":  {
        "delete system user or self" : "Нельзя удалять себя или системного пользователя!",
    },

    "toolbar" : [
        {"type" : "button",
            "name" : "Обновить",
            "action" : "/get-all-acv-video-stats",
            "icon" : "icon/32/actions/view-refresh.png",
            "specParam": "tab-change-state-action"},
            
        {"type" : "button", "name" : "Создать",
            "action" : "resource/zqr/descr/customer-update-form.json",
            "icon" : "icon/32/actions/document-new.png"},

        {"type" : "button", "name" : "Редактировать",
            "action" : "resource/zqr/descr/customer-update-form.json",
            "icon" : "icon/32/actions/zoom-in.png",
            "specParam": "tab-row"},

        {"type" : "button",
            "name" : "Удалить",
            "action" : "/delete-customer",
            "icon" : "icon/32/actions/edit-delete.png",
            "specParam": "tab-row-action",
            "confirmMsg" : "Уверены ли вы в том что хотите удалить пользователя?"}
    ],
    "columns" : [
        {"name" : "id",
            "alias" : "#",
            "type" : "float",
            "sortable" : true,
            "width" :"5%"
        },
        {"name" : "login",
            "alias" : "Логин",
            "type" : "string",
            "sortable" : true
        },
        {"name" : "active",
            "alias" : "Статус",
            "type" : "enum",
            "dict"  : {
                "true":    "Разрешен",
                "false":   "Непросмотрен",
                "":        "Непросмотрен",
                "default": "Неопределено"},
            "sortable" : true},
        {"name" : "firstname",
            "alias" : "Имя",
            "type" : "string",
            "sortable" : true
        },
        {"name" : "patronimic",
            "alias" : "Отчество",
            "type" : "string",
            "sortable" : true
        },
        {"name" : "lastname",
            "alias" : "Фамилия",
            "type" : "string",
            "sortable" : true
        }
    ],
    "filter" : {
        "submit_url" : "/get-customers"
    },
    "sort" : "id",
    "ascending" : false,
    "dblclick_action" : "resource/zqr/descr/customer-update-form.json"
}