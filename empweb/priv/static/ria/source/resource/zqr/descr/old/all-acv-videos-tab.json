{
    "type" : "table",
    "toolbar" : [
        {"type" : "button",
            "name" : "Обновить",
            "action" : "/get-all-acv-video-stats",
            "icon" : "icon/32/actions/view-refresh.png",
            "specParam": "tab-change-state-action"},

        {"type" : "button",
            "name" : "Разрешить",
            "action" : "/activate-acv-video",
            "action" : "/resource/zqr/descr/acv-video-show-mod.json",
            "icon" : "icon/32/actions/dialog-apply.png",
            "specParam": "tab-row"
        },

        {"type" : "button",
            "name" : "Запустить",
            "action" : "/start-acv-video",
            "icon" : "icon/32/actions/media-playback-start.png",
            "specParam": "tab-row-action"
        },
        {"type" : "button",
            "name" : "Остановить",
            "action" : "/stop-acv-video",
            "icon" : "icon/32/actions/media-playback-stop.png",
            "specParam": "tab-row-action"
        },
        {"type" : "button",
            "name" : "Запретить",
            "action" : "/disactivate-acv-video",
            "icon" : "icon/32/actions/dialog-close.png",
            "specParam": "tab-row-action"
        },
        {"type" : "button",
            "name" : "Удалить",
            "action" : "/delete-acv-video",   // сокрытие
            "icon" : "icon/32/actions/edit-delete.png",
            "specParam": "tab-row-action",
            "confirmMsg":
                "Уверены ли вы в том что хотите удалить рекламную компанию?"
        }
    ],
    "columns" : [
        {"name" : "id",
            "alias" : "#",
            "type" : "float",
            "sortable" : true,
            "width":    "5%"},
        {"name" : "name",
            "alias" :   "Название",
            "type" :    "string",
            "sortable" : true},
        {"name" : "login",
            "alias" :   "Заказчик",
            "type" :    "string",
            "sortable" : true},
        {"name" : "organization",
            "alias" :   "Организация",
            "type" :    "string",
            "sortable" : true},
        {"name" : "active",
            "alias" : "Статус",
            "type" : "enum", 
            "dict": {
                "true":    "Разрешена",
                "false":   "Запрещена",
                "":        "Непросмотрена",
                "default": "Неопределено"},
            "sortable" : true},
        {"name" : "stoped",
            "alias" : "Состояние",
            "type" : "enum", 
            "dict": {
                "true":    "Остановлена",
                "false":   "Запущена",
                "default":    "Неопределено"},
            "sortable" : true},
        {"name" : "datestart",
            "alias" : "Дата начала",
            "type" : "erl_date",
            "sortable" : true},
        {"name" : "datestop",
            "alias" : "Дата конца",
            "type" : "erl_date",
            "sortable" : true},
            
        {"name" : "shown",
            "alias" : "Показов",
            "type" : "float",
            "sortable" : true,
            "width":"10%"},
            
        {"name" : "clicks",
            "alias" : "Кликов",
            "type" : "float",
            "sortable" : true,
            "width":"10%"}
    ],
    "filter" : {
        "submit_url" : "/get-all-acv-videos"
    },
    
    "sort" : "id",
    "ascending" : false,
    "dblclick_action" : "resource/zqr/descr/acv-video-show-mod.json"
}
